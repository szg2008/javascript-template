doctype html
html
    head
        title Case
    body
        //Case
        - var number = 10
        case number
            when 0
                p this is #{number} number
            when 1
                p this is #{number} number
            default
                p this is #{number} number
        //Case Fall Through
        - var number = 1
        case number
            when 0
            when 1
                p this is #{number} number
            default
                p this is #{number} number
        //Block Expansion
        - var number = 0
        case number
            when 0: p this is #{number} number
            when 1: p this is #{number} number
            default: p this is #{number} number

